 <div class="">
      <h3>Participant Information</h3>
      <div>
        <div id="noColor"></div>
        <div class="tableDiv"></div>
            <div class="row">
                <label class="col-lg-auto">Name:</label>
                <span class="col-lg-auto">{{Name}}</span>
            </div>
            <div class="row">
                <label class="col-lg-auto col-sm-12 text-left">Team Name:</label>
                <span class="col-lg-auto col-sm-12">{{TeamName}}</span>
            </div>
            <div class="row">
                <label class="col-lg-auto col-sm-12 text-left">Email Address:</label>
                <span class="col-lg-auto col-sm-12">{{EmailAddress}}</span>
            </div>
            <div class="row">
                <label class="col-lg-auto col-sm-12 text-left">Phone Number:</label>
                <span class="col-lg-auto col-sm-12">{{PhoneNumber}}</span>
            </div>
            <div class="row">
                <label class="col-lg-auto col-sm-12 text-left">Amount:</label>
                <span class="col-lg-auto col-sm-12">${{Amount}}</span>
            </div>
            <div class="row ml-1">
                <a href="/member/{{id}}/update" class="col btn btn-dark btn-sm mr-2" style="color: white">Edit</a>
                <a href="/member/{{id}}/delete" class="col btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this participant?')">Delete</a>
            </div>
      </div>
    </div>